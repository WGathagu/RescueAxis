<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Fragment.About"
    tools:showIn="@layout/fragment_about">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1e5e0101">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:src="@drawable/logo"
                android:id="@+id/imageView2"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Rescue Axis"
                android:textStyle="bold"
                android:paddingLeft="90dp"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/textView4"
                android:textSize="30dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Version:"
                android:paddingLeft="20dp"
                android:id="@+id/textView8"
                android:textSize="20dp"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/textView11"
                android:layout_alignStart="@+id/textView11" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.0"
                android:id="@+id/textView7"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_alignTop="@+id/textView8"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="50dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Updated:"
                android:paddingLeft="20dp"
                android:id="@+id/textView11"
                android:textSize="20dp"
                android:layout_below="@+id/textView8"
                android:layout_alignLeft="@+id/imageView2"
                android:layout_alignStart="@+id/imageView2" />

            <TextView
                android:layout_width="142dp"
                android:layout_height="wrap_content"
                android:text="March, 2017"
                android:id="@+id/textView12"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_below="@+id/textView7"
                android:layout_toRightOf="@+id/textView11"
                android:layout_toEndOf="@+id/textView11"
                android:layout_marginLeft="50dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To have your ambulance in our application, call:"
                android:id="@+id/textView13"
                android:textSize="20dp"
                android:layout_below="@+id/textView7"
                android:layout_toRightOf="@+id/textView11"
                android:layout_toEndOf="@+id/textView11"
                android:paddingLeft="20dp" />
            <TextView
                android:layout_width="142dp"
                android:layout_height="wrap_content"
                android:text="0713278317"
                android:id="@+id/textRescuecall"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_below="@+id/textView7"
                android:layout_toRightOf="@+id/textView11"
                android:layout_toEndOf="@+id/textView11"
                android:layout_marginLeft="50dp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
